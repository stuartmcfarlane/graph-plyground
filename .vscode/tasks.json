{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build graph",
      "command": "/opt/homebrew/opt/llvm/bin/clang++",
      "args": [
        "-fcolor-diagnostics",
        "-fansi-escape-codes",
        "-g",
        "-O0",
        "${workspaceFolder}/src/*.cpp",
        "-o",
        "${workspaceFolder}/build/graph_dbg"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
